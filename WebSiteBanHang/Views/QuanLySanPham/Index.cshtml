@using WebSiteBanHang.Models;
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
@Html.ActionLink("Thêm sản phẩm", "TaoMoi",null, new {@class="btn btn-success" })
<br /><br />
@grid.GetHtml(
    tableStyle: "divTable", 
    headerStyle: "gridHead" ,
    footerStyle: "gridFooter" ,
    rowStyle: "gridRow" ,
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm" ),
    grid.Column("TenSP", "Tên SP" ),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"150\" height=\"80\" src=\"../Content/HinhAnhSP/"+p.HinhAnh+"\">")),
    grid.Column(format: p=> @Html.ActionLink("Chỉnh sửa","ChinhSua",new {id=p.MaSP})),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))


<style>

    .divTable {
        width:100%;
       border:1px solid #999999;
    
    }
        .divTable td {
            border: 1px solid #999999;
        }
     .gridHead {
            background-color: Green;
        }
     .gridHead > th > a {
        color: #fff;
    }
    .gridFooter {
    font-weight:bold;
    
    }

</style>

<style>
    .FooterAdmin {
        display: none;
    }
</style>

